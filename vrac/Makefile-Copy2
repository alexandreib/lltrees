CC = g++
PYLIBPATH = $(shell python3-config --exec-prefix)/lib
LIB = -L$(PYLIBPATH) $(shell python3-config --ldflags --libs) -lboost_python
OPTS = $(shell python3-config --cflags --include) -O2 -fPIC

default: zoo.so
    #@python ./visit_zoo.py

zoo.so: zoo.o
	$(CC) $(LIB) -Wl,-rpath,$(PYLIBPATH) -shared $< -o $@

zoo.o: zoo.cpp Makefile
	$(CC) $(OPTS) -c $< -o $@

clean:
	rm -rf *.so *.o

.PHONY: default clean